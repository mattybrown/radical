%html
  %head
    %link{ rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" }
    %link{ rel: "stylesheet", href: "https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.3/css/bulma.min.css" }
    %script{ type: "text/javascript", src: "https://cdnjs.cloudflare.com/ajax/libs/cash/1.3.0/cash.min.js" }
    %script{ type: "text/javascript", src: url('/js/custom.js') }
  %body

    - if flash[:success]
      .section
        .container
          %article.message.is-success
            .message-header
              %p Success
            .message-body
              %p= flash[:success]
    - elsif flash[:error]
      .section
        .container
          %article.message.is-danger
            .message-header
              %p Error
            .message-body
              %p= flash[:error]

    = yield
